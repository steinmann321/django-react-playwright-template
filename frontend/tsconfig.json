{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": false,
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "strict": true
  },
  "include": ["src"]
}
